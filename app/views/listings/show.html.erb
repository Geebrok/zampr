<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-2">
			<div class="thumbnail">
				<%= image_tag @listing.image.url %>
			</div>
		</div>

		<div class="col-md-4">
			<h3><%= @listing.name %></h3>
			<h4><%= number_to_currency(@listing.price) %></h4>
			<p><%= @listing.description %></p>
				<%= link_to 'Edit', edit_listing_path(@listing) %> |
				<%= link_to 'Back', listings_path %>
		</div>
	</div>
</div>


		
