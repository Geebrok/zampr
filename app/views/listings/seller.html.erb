<div class="row">
  <div class="col-md-2">
    <table>        
      <p class="menu"><%= link_to "My Profile", edit_user_registration_path %></p><hr>
      <p class="menu"><%= link_to "Community", help_index_path %></p><hr>
      <p class="menu"><%= link_to "Messages", destroy_user_session_path, method: :delete %></p><hr>
      <p class="menu"><%= link_to "New Listing", new_listing_path %></p><hr>
      <p class="menu"><%= link_to "Help", help_index_path %></p><hr>
      <p class="menu"><%= link_to "Sign out", destroy_user_session_path, method: :delete %></p><hr>
    </table>
  </div>

  <div class="col-md-10">
    <table class="table table-striped table-bordered">
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>        
        <th>Action</th>
      </tr>

      <% @listings.each do |listing| %>
        <tr>
          <td class="center"><%= image_tag listing.image.url(:thumb) %></td>
          <td><%= listing.name %></td>
          <td><%= listing.description %></td>
          <td><%= number_to_currency(listing.price) %></td>
          <td class="center">
            <div class="btn-group">
              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                Action <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "View Listings", listing, class: "btn btn-link" %></li>
                <li><%= link_to "Edit Listings", edit_listing_path(listing), class: "btn btn-link" %></li>
                <li><%= link_to "Delete Listing", listing, method: :delete, data: {confirm: "Are you suyre?" }, class: "btn btn-link" %></li>
              </ul>
            </div>      
          </td>
       </tr>
      <% end %>
    </table>
  </div>
</div>

