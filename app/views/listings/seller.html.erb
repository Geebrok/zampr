<div class="col-md-offset-2">
  <h3><%= link_to "Name Your Store", edit_user_registration_path %></h3>
    <%= link_to 'Home', listings_path %>
</div><br>

<div class="row col-md-offset-2">
  <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(listing.image.url), listing %>
        <div class="caption">
          <h3><%= listing.name %></h3>
          <p><%= number_to_currency(listing.price) %></p>
          <h6><%= "Sold by #{listing.user.name}" %></h6>                          
        </div>
      </div>
    </div>
  <% end %>
</div>