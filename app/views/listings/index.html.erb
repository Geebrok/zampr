<div class="container">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">  
          
            <div class="caption">
              <h3><%= listing.name %></h3><br>
              <p><%= number_to_currency(listing.price) %></p><br>
              <%= link_to 'Show', listing, class: "btn btn-link" %>
              <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %>
              <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>

<%= link_to 'New Listing', new_listing_path %>
