<div>
  <h3>Featured</h3><hr><br />
</div>

  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-2">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
            <div class="caption">
              <h3><%= listing.name %></h3>
              <p><%= number_to_currency(listing.price) %></p>
              <h6><%= "Sold by #{listing.user.name}" %></h6>                
            </div>
        </div>
      </div>
    <% end %>
  </div>

<div class="col-md-offset-10">
  <h6>Find more featured gifts here</h6>
</div>

<hr>     

<% if user_signed_in? %>
    <%= link_to 'New Listing', new_listing_path %>
<% end %>
